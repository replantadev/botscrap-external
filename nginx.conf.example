# Configuración Nginx para BotScrap External
# Copiar a: /etc/nginx/sites-available/botscrap
# Enlazar: sudo ln -s /etc/nginx/sites-available/botscrap /etc/nginx/sites-enabled/
# Reiniciar: sudo systemctl reload nginx

server {
    listen 80;
    server_name tu-dominio.com;  # Cambiar por tu dominio o IP
    
    # Redirigir a HTTPS (opcional pero recomendado)
    # return 301 https://$server_name$request_uri;
    
    location / {
        # Mostrar 404 para la raíz (ocultar el panel)
        return 404;
    }
    
    # Solo permitir acceso al panel desde la URL secreta
    # Cambiar /panel por tu ACCESS_PATH
    location /panel {
        proxy_pass http://127.0.0.1:5000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (para logs en tiempo real)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

