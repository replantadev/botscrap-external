# ============================================
# BotScrap External - Configuración
# ============================================
# Copia este archivo a .env y rellena los valores

# === STAFFKIT (OBLIGATORIO) ===
# URL de tu instalación de StaffKit
STAFFKIT_URL=https://staff.replanta.dev

# API Key de StaffKit (Admin > Integraciones)
STAFFKIT_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ID de la lista donde guardar los leads (por defecto)
STAFFKIT_LIST_ID=1

# IDs de listas específicas por bot (si no se especifican, usan STAFFKIT_LIST_ID)
DIRECT_LIST_ID=1
RESENTMENT_LIST_ID=4
SOCIAL_LIST_ID=5

# Timeout y reintentos
STAFFKIT_TIMEOUT=20
STAFFKIT_RETRIES=3

# === GOOGLE APIs (para Direct Bot) ===
# Google API Key (PageSpeed + Custom Search)
# https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Custom Search Engine ID
# https://programmablesearchengine.google.com/
CX_ID=0123456789abcdef0

# === TELEGRAM (opcional pero recomendado) ===
# Token del bot (@BotFather)
TELEGRAM_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Chat ID destino (@userinfobot)
TELEGRAM_CHAT_ID=123456789

# === HUNTER.IO (opcional - enriquecimiento email) ===
# https://hunter.io/api
HUNTER_KEY=0123456789abcdef0123456789abcdef01234567

# === DATAFORSEO (opcional - verificar tráfico) ===
# https://app.dataforseo.com/api-dashboard
# Formato: login:password en Base64
DATAFORSEO_CREDENTIALS=

# === LIMITES DE EJECUCIÓN ===
# Leads máximos por ejecución
MAX_LEADS_PER_RUN=10

# Límite diario total (por defecto)
DAILY_LIMIT=50

# Límites diarios por bot (si no se especifican, usan DAILY_LIMIT)
DIRECT_DAILY_LIMIT=50
RESENTMENT_DAILY_LIMIT=30
SOCIAL_DAILY_LIMIT=20

# === FILTROS DE VALIDACIÓN ===
# CMS a captar: all, wordpress, joomla
CMS_FILTER=wordpress

# Speed Score (0-100): captar webs con score menor a este valor
# Webs lentas = oportunidad de mejora
MIN_SPEED_SCORE=0
MAX_SPEED_SCORE=80

# Solo empresas con perfil ecológico
ECO_VERDE_ONLY=false

# Usar fallback de velocidad (más rápido, no consume API PageSpeed)
SKIP_PAGESPEED_API=true

# === WORKER AUTÓNOMO ===
# Activar worker autónomo
WORKER_ENABLED=true

# Intervalo de poll para nuevos jobs (segundos)
WORKER_POLL_INTERVAL=10

# Intervalo de heartbeat (segundos)
WORKER_HEARTBEAT_INTERVAL=30

# === SCHEDULER ===
# Activar programación automática
SCHEDULER_ENABLED=true

# === HEALTH MONITOR ===
# Intervalo de health checks (segundos)
HEALTH_CHECK_INTERVAL=60

# Timeout sin heartbeat para detectar problema (segundos)
HEARTBEAT_TIMEOUT=120

# Intentos máximos de recovery automático
MAX_RECOVERY_ATTEMPTS=3

# === LOGGING ===
LOG_LEVEL=INFO

# === SCRAPING ===
# Delays entre requests (segundos)
SCRAPER_DELAY_MIN=3
SCRAPER_DELAY_MAX=8

# Timeout HTTP (segundos)
HTTP_TIMEOUT=30

# === BOT IDENTIFICACIÓN ===
# Nombre de este bot (para identificarlo en StaffKit)
BOT_NAME=BotScrap External VPS1
BOT_ID=

# === WEB DASHBOARD (Panel de Control) ===
# Puerto del servidor web
FLASK_PORT=5000

# Modo debug (true/false) - NUNCA true en producción
FLASK_DEBUG=false

# Secret key para sesiones - ¡CAMBIAR EN PRODUCCIÓN!
FLASK_SECRET_KEY=cambiar-esta-clave-secreta-en-produccion-2024

# Credenciales de acceso al panel
ADMIN_USER=admin
ADMIN_PASS=tu-password-seguro-aqui

# URL de acceso (oculta) - Ejemplo: /panel, /secreto, /xyz123
# El panel solo será accesible en: http://tu-vps.com:5000/panel
ACCESS_PATH=/panel
